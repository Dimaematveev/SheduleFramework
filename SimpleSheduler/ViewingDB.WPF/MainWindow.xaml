<Window x:Class="ViewingDB.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewingDB.WPF"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Margin="10,10,9.6,10" x:Name="TabControls">
            <TabItem Header="Asa">
                <DataGrid x:Name="food" AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=assa1 }">
                    <DataGrid.Resources>
                        <col:ArrayList x:Key="assa1">

                            <local:NeedFood NameProduct="wdwd" Count1="1.2"/>
                        </col:ArrayList>

                    </DataGrid.Resources>
                </DataGrid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
